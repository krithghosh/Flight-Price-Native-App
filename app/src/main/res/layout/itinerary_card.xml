<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_padding_quarter"
    android:layout_marginTop="@dimen/card_padding_quarter"
    app:cardCornerRadius="@dimen/card_padding_quarter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/outbound_layout"
            layout="@layout/bound_layout" />

        <include
            android:id="@+id/inbound_layout"
            layout="@layout/bound_layout" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/border_height"
            android:background="@color/background" />

        <include
            android:id="@+id/pricing_layout"
            layout="@layout/pricing_layout" />

    </LinearLayout>
</android.support.v7.widget.CardView>